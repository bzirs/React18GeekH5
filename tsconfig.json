{
  "compilerOptions": {
    /*  要添加这里才能识别@路径 */
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // 结束
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  // 这样做不能识别@路径
  "exclude": [
    "./path.tsconfig.json"
  ]
}